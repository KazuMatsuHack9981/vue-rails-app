<%= render partial: "partials/common_header" %>

<div class="main-center">
  <h2>Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, novalidate: true}) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field form-group needs-validation">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true %>
      <div class="invalid-feedback">
        無効な形式です
      </div>
    </div>

    <div class="actions d-flex justify-content-center my-4">
      <%= f.submit "Send me reset password instructions", class: "btn btn-outline-primary" %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>

<%= render partial: "partials/common_footer" %>

<%= javascript_pack_tag 'application' %>